Config { font    = "Berkeley Mono Nerd Font 9"
       , additionalFonts = [ "xft:BerkeleyMono Nerd Font:pixelsize=9" ]
       , textOffset = 0
       , bgColor = "#44475A"
       , fgColor = "#F8F8F2"
       , position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , persistent = True
       , iconRoot = "/home/pho/.xmonad/xpm/"
       , commands = [ Run Date "%H:%M:%S" "date" 10
                    , Run Com "uname" ["-r"] "kernel" 36000
                    , Run StdinReader
